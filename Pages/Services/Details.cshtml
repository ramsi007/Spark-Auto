@page
@model SparkAuto.Pages.Services.DetailsModel
@{
}

<div class="container pt-4 pd-2 row">
    <div class="col-6">
        <h2 class="text-info"> Detailles du Service</h2>
    </div>

    <div class="col-6 text-right">
        <a asp-page="History" class="btn btn-outline-success" asp-route-carId="@Model.Service.CarId">
            retour à la liste
        </a>
    </div>
</div>

<div class="container white-background">
    <div class="card">
        <div class="card-header bg-dark text-light container row">
            <div class="col-1 text-center text-white-50 pt-3">
                <i class="fas fa-user fa-2x"></i>
            </div>
            <div class="col-5">

                <label class="text-info">
                    @Html.DisplayFor(m => m.Service.Car.ApplicationUser.Name)
                </label>
                <br />

                <label class="text-info">
                    @Model.Service.Car.ApplicationUser.Email / @Model.Service.Car.ApplicationUser.PhoneNumber
                </label>
            </div>

            <div class="col-5 text-right">
                <label class="text-info">
                    @Html.DisplayFor(m => m.Service.Car.Make)   @Html.DisplayFor(m => m.Service.Car.Model)   @Html.DisplayFor(m => m.Service.Car.Style)
                </label>
                <br />

                <label class="text-info">
                    @Model.Service.Car.Year
                </label>

            </div>

            <div class="col-1 text-center text-white-50 pt-3">
                <i class="fas fa-car fa-2x"></i>
            </div>
        </div>

        <div class="card-body">

                <div class="border container rounded p-2">
                    <h3 class="text-info pd-2">Service Summary</h3>

                    @if (Model.ServiceDetails.Count() == 0)
                    {
                        <p class=" text-danger text-center" style="font-size: 18px">
                            Aucun service détails dans la liste, Veillez Ajouter un
                        </p>
                    }
                    else
                    {
                        <div class="row mt-3">
                            <div class="col-7">
                                <table class="table table-striped border">
                                    <tr class="table-secondary">
                                        <th>
                                            @Html.DisplayNameFor(m => m.ServiceDetails[0].SerivceName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(m => m.ServiceDetails[0].SerivcePrice)
                                        </th>
                                    </tr>

                                    @foreach (var item in Model.ServiceDetails)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => item.SerivceName)</td>
                                            <td>@Html.DisplayFor(m => item.SerivcePrice)</td>

                                        </tr>
                                    }

                                    <tr style="background-color: #e2fee2">
                                        <td colspan="1">
                                            <h6 class="text-success">Prix Total : </h6>
                                        </td>
                                        <td colspan="2">
                                            <h6 class="text-success">@Html.DisplayFor(m => m.Service.TotalPrice) €</h6>
                                        </td>
                                    </tr>
                                </table>
                            </div>

                            <div class="col-5">
                                <div class="row">
                                    <div class="col-3">
                                        <label asp-for="Service.Miles"></label>
                                    </div>

                                    <div class="col-9">
                                        <input class="form-control" asp-for="Service.Miles" readonly />
                                    </div>
                                    <div class="row">
                                        <div class="col-12 pt-3">
                                            <textarea asp-for="Service.Comments"
                                                      class="form-control" style="height:100px; width:423px" readonly></textarea>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    }
                </div>
        </div>
    </div>

</div>