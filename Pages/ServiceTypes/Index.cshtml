@page
@model SparkAuto.Pages.ServiceTypes.IndexModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<div class="border white-background">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">Service Types List</h2>
        </div>
        <div class="col-6 text-right">
            <a class="btn btn-primary" asp-page="Create"><i class="fas fa-plus"></i>&nbsp; Ajouter</a>
        </div>
    </div>

    <div>
        @if(Model.ServiceTypes.Count() == 0)
        {
            <p class="text-danger">Ouups ....! Aucun  serice Type trouvé, veuillez créer un </p>
        }
        else
        {
    <table class="table table-striped border">
        <tr class="table-secondary">
            <th>@Html.DisplayNameFor(m => m.ServiceTypes[0].Name)</th>
            <th>@Html.DisplayNameFor(m => m.ServiceTypes[0].Price)</th>
            <th></th>
        </tr>
        @foreach (var item in Model.ServiceTypes)
        {
            <tr>
                <td>@Html.DisplayFor(m => item.Name)</td>
                <td>@Html.DisplayFor(m => item.Price)</td>
                <td style="width:150px">
                    <div class="btn-group" role="group">
                        <a asp-page="Details" class="btn btn-success" asp-route-id="@item.Id"><i class="fas fa-th-list"></i></a>
                        <a asp-page="Edit" class="btn btn-primary" asp-route-id="@item.Id"><i class="fas fa-edit"></i></a>
                        <a asp-page="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i></a>
                    </div>

                </td>
            </tr>
        }

    </table>
        }

    </div>

</div>

