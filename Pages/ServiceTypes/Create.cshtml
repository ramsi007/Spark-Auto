@page
@model SparkAuto.Pages.ServiceTypes.CreateModel
@{
}
<h2> Créer un nouveau Type Service </h2>
<form method="post">
   
    <div class="white-background" border>
        <div class="row">
            <div class="col-5 offset-2">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ServiceType.Name"></span>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" />
            </div>
            <span class="text-danger" asp-validation-for="ServiceType.Price"></span>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input type="submit" class="btn btn-primary form-control" value="Ajouter" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success form-control" asp-page="Index"> retour à la liste</a>
                    </div>
                </div>
            </div>

        </div>

    </div>
</form>

@section Scripts{ 
@{ 
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}

}
