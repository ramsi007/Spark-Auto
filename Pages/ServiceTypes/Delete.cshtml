@page
@model SparkAuto.Pages.ServiceTypes.DeleteModel
@{
}

<h3>Supprimer un type</h3>
<form method="post">

    <input type="hidden" asp-for="ServiceType.Id" />
    <div class="white-background" border>
        <div class="row">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Name" class="form-control" readonly />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="ServiceType.Price"></label>
            </div>
            <div class="col-5">
                <input asp-for="ServiceType.Price" class="form-control" readonly />
            </div>

        </div>

        <div class="form-group row">
            <div class="col-5 offset-2">
                <div class="row">
                    <div class="col-6">
                        <input  type="submit" class="btn badge-danger form-control" value="Supprimer" />
                    </div>
                    <div class="col-6">
                        <a class="btn btn-success form-control" asp-page="Index"> retour à la liste</a>
                    </div>
                </div>
            </div>

        </div>

    </div>

</form>
