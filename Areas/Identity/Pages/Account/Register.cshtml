@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h3 class="text-info text-center pt-2 pb-3">Créer un nouveau compte</h3>
<div class="white-background row border">
    <div class="col-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.Name"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.Name" class="form-control" />
                    <span asp-validation-for="Input.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.Email"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.City"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.Adresse"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.Adresse" class="form-control" />
                    <span asp-validation-for="Input.Adresse" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.PostalCode"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.PostalCode" class="form-control" />
                    <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.PhoneNumber"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.Password"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
            </div>

            <div class="row form-group">
                <div class="col-4">
                    <label asp-for="Input.ConfirmPassword"></label>
                </div>

                <div class="col-8">
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-4"></div>
                <div class="col-4">
                    <input type="submit" class="btn btn-primary form-control" value="Register" />
                </div>
                <div class="col-4">
                    <a class="btn btn-success form-control" asp-page="Index"> retour à la liste</a>
                </div>
            </div>

        </form>
    </div>
</div>

